{% extends 'base.html.twig' %}

{% block title %}Create Mobile{% endblock %}

{% block body %}
<style>
h1 {
    background-color: green;
}

body {
    background-color: lightblue;
}
</style>

<div class="container">
    <h2 class="mt-5 mb-5 text-center text-primary">ADD MOBILE</h2>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary">Name</h6>
            {{ form_widget (form.name, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Info</h6>
            {{ form_widget (form.info, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Brand</h6>
            {{ form_widget (form.brand, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Price</h6>
            {{ form_widget (form.Price, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Amount</h6>
            {{ form_widget (form.Amount, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Image</h6>
            {{ form_widget (form.ImageUpload, {'attr' : {'class' : 'form-control'}, 'required': 'required'}) }}
        </div>
        <div class="form-group text-center mt-5">
            <button type="submit" class="btn btn-primary mt-2">CREATE</button>
        </div>
    {{ form_end (form) }}
    <div class="col-md-12 text-center">
        <a href="{{ asset('manager/mobile') }}" class="btn btn-secondary" role="button">BACK</a>
    </div>
</div>
{% endblock %}
