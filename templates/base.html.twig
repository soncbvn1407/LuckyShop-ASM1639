<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Lucky Shop{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        {% endblock %}
    </head>
    <body class="p-3 mb-2 bg-info text-dark">
        {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="#">&nbsp;Lucky Shop</a>
                <ul class="navbar-nav">
                <!-- Home -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ asset('/') }}">Home</a>
                    </li>
                <!-- Trang quản lý -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">Manager</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ asset('manager/mobile') }}">Mobile</a>
                        <a class="dropdown-item" href="{{ asset('manager/brand') }}">Brand</a>
                    </div>
                </li>
            </ul>
        </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
